<section role="dialog" id="download-as-popup" class="aui-layer aui-dialog2 aui-dialog2-medium" aria-hidden="true"
         data-aui-remove-on-hide="true">
    <form action="$action.getBootstrapManager().getWebAppContextPath()/plugins/downloadAs/downloadAs.action"
          method="get" class="aui">
        <header class="aui-dialog2-header">
            <h2 class="aui-dialog2-header-main">$i18n.getText(
                "onlyoffice.connector.dialog.conversion.header.title")</h2>
        </header>

        <div class="aui-dialog2-content" id="download-as-popup-binder">

            <div class="field-group">
                <label for="file-name">$i18n.getText('onlyoffice.connector.dialog.conversion.field.name')</label>
                <input class="text autocomplete-space" type="text" id="file-name" name="file-name"
                       value="$action.getFileName()">
            </div>

            <div class="field-group">
                <label for="current-type">$i18n.getText(
                    "onlyoffice.connector.dialog.conversion.field.current-type")</label>
                <input class="text autocomplete-space" type="text" id="current-type"
                       name="current-type" value="$action.getFileType()" disabled="disabled">
            </div>

            <div class="field-group">
                <label for="target-file-type">$i18n.getText(
                    "onlyoffice.connector.dialog.conversion.field.target-type")</label>
                <select class="select" id="target-file-type" name="targetFileType">
                    #foreach($type in $action.getTargetFileTypeList())
                        <option value="$type">$type</option>
                    #end
                </select>
            </div>

            <footer class="aui-dialog2-footer">
                <div class="aui-dialog2-footer-actions">
                    <button id="dialog-download-as-button" class="aui-button aui-button-primary">$i18n.getText(
                        "onlyoffice.convert.dialog.download-as")</button>
                    <button id="dialog-close-button" class="aui-button aui-button-link">$i18n.getText(
                        "onlyoffice.connector.dialog.conversion.button.close")</button>
                </div>
            </footer>
        </div>
    </form>
</section>

<script>
    $("#dialog-download-as-button").on("click" ,function () {
        AJS.Onlyoffice = {
            fileName: $("#file-name").val(),
            currentFileType: "$action.getFileType()",
            targetFileType: $("#target-file-type").val(),
            pageId: "$action.getPageId()",
            attachmentId: "$action.getAttachmentId()"
        }
    });
</script>